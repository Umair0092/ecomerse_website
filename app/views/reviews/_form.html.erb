<%= turbo_frame_tag "new_comment" do %>
  <div class="container mt-5">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Add New Review</h4>
        
      </div>

      <div class="card-body">
        <%= form_with model: [@product, Review.new], local: true, data: { turbo_frame: "new_comment" } do |review| %>

          <div class="mb-3">
            <%= review.label :comment, class: "form-label fw-bold" %>
            <%= review.text_area :comment, class: "form-control", rows: 3, required: true, placeholder: "Write your review here..." %>
          </div>

          <div class="mb-3">
            <%= review.label :rating, class: "form-label fw-bold" %>
            <%= review.number_field :rating, class: "form-control", step: 1, min: 0, max: 5, required: true, placeholder: "Rate from 0 to 5" %>
          </div>

          <div class="d-flex justify-content-end">
            <%= review.submit "Create Review", class: "btn btn-success me-2" %>
           
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>
